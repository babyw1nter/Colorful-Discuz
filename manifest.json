{
  "manifest_version": 2,
  "name": "Colorful Discuz!",
  "version": "0.0.1",
  "description": "生成 Discuz! 的炫彩文本，让您全年文体两开花！ ⁄(⁄ ⁄•⁄ω⁄•⁄ ⁄)⁄ (目前部分功能仅支持Mcbbs)",
  "icons": {
    "16": "img/32.png",
    "32": "img/32.png",
    "48": "img/64.png",
    "64": "img/64.png"
  },
  "browser_action": {
    "default_icon": "img/64.png",
    "default_title": "Discuz! 炫彩文本 ⁄(⁄ ⁄•⁄ω⁄•⁄ ⁄)⁄",
    "default_popup": "main.html"
  },
  "author": "hhui64",
  "background": {
    "scripts": ["js/background.js"]
  },
  "content_scripts": [{
    "matches": ["*://www.mcbbs.net/*"],
    "js": ["js/core.js"],
    "run_at": "document_end"
  }],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "homepage_url": "https://blog.sketchowo.cn",
  "minimum_chrome_version": "40",
  "options_page": "options.html",
  "permissions": [
    "contextMenus",
    "tabs",
    "storage",
    "http://*/*",
    "https://*/*",
    "declarativeContent"
  ]
}